DATA_DIR=./data
ASSETS_DIR=./assets
MIN_QUEUE=20
DAILY_TARGET_MIN=6
DAILY_TARGET_MAX=12
SCHEDULE_TIMEZONE=Africa/Cairo

# Binaries
FFMPEG_BIN=ffmpeg
PIPER_BIN=/opt/piper/piper
PIPER_VOICE=en_US-amy-medium
TTS_CMD="python3 tools/tts_piper.py --text {infile} --out {outfile} --voice ${PIPER_VOICE} --piper ${PIPER_BIN}"

# Stable Diffusion (optional)
SD_API_BASE=http://127.0.0.1:7860
SD_BG_CMD="python3 tools/sd_bg.py --mode video_bg --prompt '{prompt}' --out {outfile}"
SD_THUMB_CMD="python3 tools/sd_bg.py --mode thumb --prompt '{prompt}' --out {outfile}"

# Local LLM (optional)
LLM_MODEL=gpt-oss-20b
LLM_HOST=vllm
LLM_PORT=8000
LLM_CMD="python3 llm_runner.py --host ${LLM_HOST} --port ${LLM_PORT} --model ${LLM_MODEL}"

# Uploader (optional)
YOUTUBE_UPLOADER_CMD="python3 tools/youtube_uploader.py --file {mp4} --thumb {png} --title '{title}' --desc '{description}' --tags '{csv_tags}' --privacy {privacy} --category {category}"
YOUTUBE_CHANNEL_ID=UCNNUrp0FKm6SUO0TxPeZ7_Q
PRIVACY_STATUS=public
CATEGORY_ID=27

# Embeddings (local)
EMBEDDINGS_BACKEND=onnx  # hash|onnx
EMB_MODEL_DIR=./models/embeddings/e5-small
EMB_DEVICE=cpu
EMB_BATCH=64
TOPK_HOOKS=40
SIM_THRESHOLD=0.35

# Background music (optional)
MUSIC_DIR=./assets/music
BG_MUSIC_GLOB=./assets/music/*.mp3
BG_MUSIC_VOL_DB=-13

# B-roll video clips (optional)
FOOTAGE_DIR=./assets/footage
FOOTAGE_GLOB=./assets/footage/**/*.mp4

# Hook miner controls
MINER_CACHE_TTL_SEC=21600
MINER_RATE_PER_KEY_SEC=5
MINER_SOURCE_GLOB=assets/sources/*

# Analytics CLI
ANALYTICS_CMD="python3 tools/analytics_puller.py --since 2d --out data/metrics_latest.json"

# Built-in flite fallback voice (leave blank for default)
FALLBACK_TTS_VOICE=slt
