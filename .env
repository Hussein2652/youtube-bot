DATA_DIR=data
ASSETS_DIR=assets
MIN_QUEUE=6
DAILY_TARGET_MIN=10
DAILY_TARGET_MAX=20
SCHEDULE_TIMEZONE=UTC

# Binaries
FFMPEG_BIN=ffmpeg
PIPER_BIN=piper
PIPER_VOICE=en_US-lessac-medium
TTS_CMD="$PIPER_BIN -m $PIPER_VOICE -f {input_txt} -o {output_wav}"

# Stable Diffusion (optional)
SD_CMD=
SD_BG_CMD="python3 tools/sd_bg.py --prompt '{prompt}' --out {output_png} --size 1080x1920 --model runwayml/stable-diffusion-v1-5"
SD_THUMB_CMD="python3 tools/sd_bg.py --prompt '{prompt}' --out {output_png} --size 1280x720 --model stabilityai/stable-diffusion-xl-base-1.0"

# Local LLM 20B (optional)
LLM_CMD=python3 llm_runner.py
LLM_MODEL=gpt-oss-20b

# Uploader (optional)
YOUTUBE_UPLOADER_CMD="python3 tools/youtube_uploader.py --file {mp4} --thumb {png} --title '{title}' --desc '{description}' --tags '{csv_tags}' --privacy {privacy} --category {category}"
YOUTUBE_API_KEY=
YOUTUBE_CHANNEL_ID=
PRIVACY_STATUS=public
CATEGORY_ID=28

# Embeddings (local)
EMBEDDINGS_BACKEND=onnx  # hash|onnx
EMB_MODEL_DIR=/models/embeddings/e5-small
EMBEDDINGS_MODEL_PATH=
EMBEDDINGS_TOKENIZER_PATH=
EMB_BATCH=64
EMB_DEVICE=auto
TOPK_HOOKS=50
SIM_THRESHOLD=0.45

# Background music (optional)
MUSIC_DIR=assets/music
BG_MUSIC_GLOB=assets/music/*.mp3
BG_MUSIC_VOL_DB=-18

# Hook miner controls
MINER_CACHE_TTL_SEC=21600
MINER_RATE_PER_KEY_SEC=5
MINER_SOURCE_GLOB=assets/sources/*

# Analytics CLI
ANALYTICS_CMD="python3 tools/analytics_puller.py --since 2d --out data/metrics_latest.json"
