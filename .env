# ===== YOUTUBE =====
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxx
PRIVACY_STATUS=public
CATEGORY_ID=27

# ===== MODELS / LLM =====
LLM_MODEL=meta-llama-3-8b-instruct
LLM_HOST=127.0.0.1
LLM_PORT=8000
LLM_CMD="python3 llm_runner.py --host ${LLM_HOST} --port ${LLM_PORT} --model ${LLM_MODEL}"

# ===== EMBEDDINGS =====
EMBEDDINGS_BACKEND=onnx
EMB_MODEL_DIR=./models/embeddings/e5-small
EMB_DEVICE=cpu
EMB_BATCH=64
TOPK_HOOKS=40
SIM_THRESHOLD=0.82

# ===== STABLE DIFFUSION =====
SD_API_BASE=http://127.0.0.1:7860
SD_BG_CMD="python3 tools/sd_bg.py --mode video_bg --prompt '{prompt}' --out {outfile}"
SD_THUMB_CMD="python3 tools/sd_bg.py --mode thumb --prompt '{prompt}' --out {outfile}"

# ===== VOICE (Piper) =====
PIPER_BIN=/opt/piper/piper
PIPER_VOICE=en_US-amy-medium
TTS_CMD="python3 tools/tts_piper.py --text {infile} --out {outfile} --voice ${PIPER_VOICE} --piper ${PIPER_BIN}"

# ===== AUDIO / MUSIC =====
MUSIC_DIR=./assets/music
BG_MUSIC_GLOB=./assets/music/*.mp3
BG_MUSIC_VOL_DB=-13

# ===== PIPELINE THROUGHPUT =====
MIN_QUEUE=6
DAILY_TARGET_MIN=6
DAILY_TARGET_MAX=12

# ===== ANALYTICS =====
ANALYTICS_CMD="python3 tools/analytics_puller.py --since 2d --out data/metrics_latest.json"

# ===== MISC =====
FFMPEG_BIN=ffmpeg
DATA_DIR=./data
TZ=Africa/Cairo
